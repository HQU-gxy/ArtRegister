<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBar"
            style="@style/Base.Theme.ArtRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/toolbar_menu"
            app:title="@string/app_name" />

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_new_piece"
        style="@style/Base.Theme.ArtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="0dp"
        android:text="@string/new_piece"
        app:layout_anchor="@+id/main"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/main"
        app:layout_constraintEnd_toStartOf="@+id/main"
        app:layout_constraintStart_toEndOf="@+id/main"
        app:layout_constraintTop_toBottomOf="@+id/main" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>