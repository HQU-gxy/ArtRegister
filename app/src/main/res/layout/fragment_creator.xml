<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatorFragment">

    <Button
        android:id="@+id/buttonNewPiece"
        style="@style/Base.Theme.ArtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_piece"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetPieceList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGetPieceList"
        style="@style/Base.Theme.ArtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_creations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNewPiece" />

</androidx.constraintlayout.widget.ConstraintLayout>
